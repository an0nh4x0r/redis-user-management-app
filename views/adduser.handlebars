<h1>Search Users</h1>
{{#if error}} <span>{{ error }}</span> {{/if}}
<form method="post" action="/user/add">
    <div class="form-group">
        <label for="id">ID</label>
        <input id="id" type="text" name="id" placeholder="Enter the ID for the user" class="form-control">
    </div>
    <div class="form-group">
        <label for="first_name">First Name</label>
        <input id="first_name" type="text" name="first_name" placeholder="Enter the First Name for the user" class="form-control">
    </div>
    <div class="form-group">
        <label for="last_name">Last Name</label>
        <input id="last_name" type="text" name="last_name" placeholder="Enter the Last Name for the user" class="form-control">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input id="email" type="text" name="email" placeholder="Enter the Email for the user" class="form-control">
    </div>
    <div class="form-group">
        <label for="phone">Phone</label>
        <input id="phone" type="text" name="phone" placeholder="Enter the Phone for the user" class="form-control">
    </div>
    <input type="submit" class="btn btn-primary" value="Save">
</form>